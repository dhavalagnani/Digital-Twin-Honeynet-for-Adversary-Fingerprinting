# Digital Twin Honeynet - Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=honeynet
MONGDB_COLLECTION=attacks
MONGODB_USERNAME=honeynet_user
MONGODB_PASSWORD=secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# =============================================================================
# API CONFIGURATION
# =============================================================================

# FastAPI Backend
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_URL=http://localhost:8000
API_SECRET_KEY=your-secret-key-here-change-this-in-production
API_DEBUG=false

# =============================================================================
# HONEYPOT CONFIGURATION
# =============================================================================

# Cowrie SSH Honeypot
COWRIE_LOG_PATH=/var/log/honeynet/cowrie.log
COWRIE_JSON_LOG_PATH=/var/log/honeynet/cowrie.json
COWRIE_PORT=2222

# HTTP Honeypot
HTTP_HONEYPOT_PORT=8080
HTTP_HONEYPOT_LOG_PATH=/var/log/honeynet/http-honeypot.log

# RDP Honeypot
RDP_HONEYPOT_PORT=3389
RDP_HONEYPOT_LOG_PATH=/var/log/honeynet/rdp-honeypot.log

# SMB Honeypot
SMB_HONEYPOT_PORT=445
SMB_HONEYPOT_LOG_PATH=/var/log/honeynet/smb-honeypot.log

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# HAProxy Configuration
HAPROXY_CONFIG_PATH=/etc/haproxy/haproxy.cfg
HAPROXY_LOG_PATH=/var/log/haproxy.log

# Production Server
PRODUCTION_PORT=8081
PRODUCTION_LOG_PATH=/var/log/honeynet/production.log

# Network Interfaces
HONEYNET_NETWORK=172.20.0.0/16
PRODUCTION_NETWORK=192.168.1.0/24

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# General Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/honeynet/honeynet.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log Monitor
LOG_MONITOR_INTERVAL=30
LOG_MONITOR_BATCH_SIZE=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Detection Thresholds
BRUTE_FORCE_THRESHOLD=5
BRUTE_FORCE_WINDOW=60
ATTACK_DETECTION_THRESHOLD=3
IP_BLACKLIST_DURATION=3600

# Firewall Configuration
FIREWALL_ENABLED=true
AUTO_BLOCK_IPS=true
BLOCK_DURATION=3600

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Dashboard Configuration
DASHBOARD_TITLE=Digital Twin Honeynet
DASHBOARD_REFRESH_INTERVAL=30
DASHBOARD_MAX_ATTACKS_DISPLAY=100

# Alert Configuration
ALERTS_ENABLED=true
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_SERVER=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-app-password

# =============================================================================
# FINGERPRINT EVASION TESTING
# =============================================================================

# Nmap Configuration
NMAP_PATH=/usr/bin/nmap
NMAP_TIMEOUT=300
NMAP_SCAN_TYPE=-sS

# p0f Configuration
P0F_PATH=/usr/sbin/p0f
P0F_TIMEOUT=60

# Test Configuration
FINGERPRINT_TEST_INTERVAL=3600
SIMILARITY_THRESHOLD=0.8

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
DEBUG_MODE=false
TEST_MODE=false
MOCK_EXTERNAL_TOOLS=false

# Performance Tuning
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 hours
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/backups/honeynet

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# SSL/TLS Configuration (if using HTTPS)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/honeynet.crt
SSL_KEY_PATH=/etc/ssl/private/honeynet.key

# External Integrations
SIEM_ENABLED=false
SIEM_ENDPOINT=http://your-siem-server:8080
SIEM_API_KEY=your-siem-api-key

# Geolocation (optional)
GEOIP_ENABLED=false
GEOIP_DATABASE_PATH=/usr/share/GeoIP/GeoLite2-City.mmdb

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Production Environment Example:
# MONGODB_URI=mongodb://honeynet_user:secure_password@localhost:27017/honeynet
# API_SECRET_KEY=your-very-long-and-secure-secret-key-for-production
# DEBUG_MODE=false
# LOG_LEVEL=WARNING

